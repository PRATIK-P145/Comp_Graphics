    {
      "name": "Debug OpenGL Program",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/bin/opengl_window.exe",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": true,
      "MIMode": "gdb",
